# Production Environment Variables for DrinkMate
# Copy this file to .env in your server directory and fill in the actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/drinkmate_prod
# Alternative: MongoDB Atlas connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/drinkmate_prod?retryWrites=true&w=majority

# ===========================================
# JWT & SESSION SECRETS
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-key-here
SESSION_SECRET=your-super-secure-session-secret-key-here

# ===========================================
# CLOUDINARY (Image Storage)
# ===========================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@drinkmate.sa

# ===========================================
# ARAMEX SHIPPING INTEGRATION
# ===========================================
ARAMEX_USERNAME=your-aramex-username
ARAMEX_PASSWORD=your-aramex-password
ARAMEX_ACCOUNT_NUMBER=your-aramex-account-number
ARAMEX_ACCOUNT_PIN=your-aramex-account-pin
ARAMEX_ACCOUNT_ENTITY=your-aramex-account-entity
ARAMEX_ACCOUNT_COUNTRY_CODE=SA
ARAMEX_ENVIRONMENT=production

# ===========================================
# URWAY PAYMENT GATEWAY
# ===========================================
URWAY_MERCHANT_ID=your-urway-merchant-id
URWAY_MERCHANT_KEY=your-urway-merchant-key
URWAY_API_URL=https://payments.urway-tech.com/URWAYPGService/transactionProcess
URWAY_RETURN_URL=https://drinkmate.sa/payment/success
URWAY_CANCEL_URL=https://drinkmate.sa/payment/cancel

# ===========================================
# TABBY PAYMENT GATEWAY
# ===========================================
TABBY_PUBLIC_KEY=your-tabby-public-key
TABBY_SECRET_KEY=your-tabby-secret-key
TABBY_API_URL=https://api-sandbox.tabby.ai
# For production: https://api.tabby.ai

# ===========================================
# REDIS (Optional - for caching and sessions)
# ===========================================
REDIS_URL=redis://localhost:6379
# Alternative: Redis Cloud connection string
# REDIS_URL=redis://username:password@host:port

# ===========================================
# GOOGLE SERVICES
# ===========================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://drinkmate.sa

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=/var/log/drinkmate/app.log

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# ===========================================
# MONITORING (Optional)
# ===========================================
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================
# These will be used by the Next.js frontend
NEXT_PUBLIC_API_URL=https://drinkmate.sa/api
NEXT_PUBLIC_SITE_URL=https://drinkmate.sa
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-google-analytics-id
NEXT_PUBLIC_TABBY_PUBLIC_KEY=your-tabby-public-key
